<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naveen.sampleratingwebview.SampleWebView">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"
        ></WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp"
        android:visibility="gone"
        android:layout_gravity="bottom">


        <EditText
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter BackGroundColor"
            android:inputType="textMultiLine"
            android:id="@+id/editbgcolor"/>

        <EditText
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Header "
            android:inputType="textMultiLine"
            android:id="@+id/editUrl"/>

        <EditText
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Para "
            android:inputType="textMultiLine"
            android:id="@+id/editpara"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET URL OR HTML CODE"
            android:layout_gravity="center"
            android:id="@+id/bntrigger"/>

    </LinearLayout>
</FrameLayout>
